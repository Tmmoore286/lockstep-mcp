{
  "name": "lockstep-mcp",
  "version": "0.1.0",
  "description": "Local MCP coordination server for multi-agent workflows",
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "lockstep-mcp": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "node --loader tsx src/cli.ts server",
    "start": "node dist/cli.js server",
    "install:mcp": "node --loader tsx src/cli.ts install",
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "prepare": "npm run build",
    "clean": "rm -rf dist"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "better-sqlite3": "^11.10.0",
    "tsx": "^4.21.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.0.9",
    "typescript": "^5.9.3"
  }
}
